package shocky3;

public class Plugin {
	private boolean enabled = false;
	
	public final void enable() {
		if (enabled) return;
		onEnable();
		enabled = true;
	}
	protected void onEnable() {}
	
	public final void disable() {
		if (!enabled) return;
		onDisable();
		enabled = false;
	}
	protected void onDisable() {}
	
	public boolean enabled() {
		return enabled;
	}
}