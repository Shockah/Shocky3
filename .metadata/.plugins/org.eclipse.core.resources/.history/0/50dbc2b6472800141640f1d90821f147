package shocky3;

public class Plugin {
	public final Shocky botApp;
	private boolean enabled = false;
	
	public Plugin(Shocky botApp) {
		this.botApp = botApp;
	}
	
	public final void enable() {
		if (enabled) return;
		onEnable();
		enabled = true;
	}
	public final void disable() {
		if (!enabled) return;
		onDisable();
		enabled = false;
	}
	public final boolean enabled() {
		return enabled;
	}
	
	protected void onEnable() {}
	protected void onDisable() {}
	
	public @interface Load {
		String internalName();
		String name();
		String version();
		String author();
	}
}