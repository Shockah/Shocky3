package sconsole;

import com.googlecode.lanterna.terminal.Terminal.Color;

public class Borders {
	public final int w, h;
	public Color[][] bg, fg;
	
	public Borders(ScreenRect rect) {
		this(rect.w, rect.h);
	}
	public Borders(int w, int h) {
		this.w = w;
		this.h = h;
		bg = new Color[w][h];
		fg = new Color[w][h];
	}
}